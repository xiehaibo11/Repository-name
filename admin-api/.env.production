# 生产环境配置
# 🚨 重要：生产环境配置，请谨慎修改

# 服务器配置
PORT=3001
NODE_ENV=production

# 数据库配置（生产环境请使用实际的数据库配置）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=backend_management_prod
DB_USER=postgres
DB_PASSWORD=your-production-password

# JWT配置（生产环境请使用强密钥）
JWT_SECRET=your-super-strong-production-jwt-secret-key-please-change-this
JWT_EXPIRES_IN=2h
JWT_REFRESH_SECRET=your-super-strong-production-refresh-secret-key-please-change-this
JWT_REFRESH_EXPIRES_IN=7d

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# 日志配置
LOG_LEVEL=warn
LOG_FILE=logs/production.log

# CORS配置（生产环境请设置实际的前端域名）
CORS_ORIGIN=https://your-frontend-domain.com

# 管理员默认凭据
DEFAULT_ADMIN_USERNAME=1019683427
DEFAULT_ADMIN_PASSWORD=xie080886
DEFAULT_ADMIN_EMAIL=admin@example.com

# Redis配置 - 生产环境
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=123456
REDIS_DB=0
REDIS_KEY_PREFIX=admin_api_prod:

# 🔒 生产环境安全设置
# ⚠️ 以下功能在生产环境中必须禁用！
ENABLE_DEV_PORT_KILLER=false
AUTO_KILL_PORT_PROCESS=false
